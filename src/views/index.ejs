
<%- include ('partials/_header') %>
<article class="container-fluid">
    <article class="row">
        <!--FORM--->
        <article class="col-md-5">
            <article class="card">
                <article class="card-body">
                    <form action="/add" method="POST">
                        <article class="form-group">
                            <input type="text" name="title" placeholder="Insert a Title" class="form-cotrol">
                        </article>
                        <article class="form-group">
                            <textarea name="description" cols="80" class="form-control" placeholder="Insert a Description"></textarea>
                        </article>
                        <button type="submit" class="btn btn-primary btn-block">Add</button>
                    </form>
                </article>
            </article>
        </article>
        <!--LIST-->
        <article class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>NÂº</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Operation</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i = 0; i < tasks.length; i++){ %>
                        <tr>
                            <td><%=i + 1%></td>
                            <td><%=tasks[i].title%></td>
                            <td><%=tasks[i].description%></td>
                            <td>
                                <a href="/turn/<%= tasks[i]._id%>" 
                                    class="btn <%= tasks[i].status ? 'btn-success' : 'btn-dark'%>">
                                    Done
                                </a>
                                <a href="/delete/<%= tasks[i]._id%>" class="btn btn-danger">Delete</a>
                                <a href="/edit/<%= tasks[i]._id%>" class="btn btn-info">Edit</a>
                            </td>
                        </tr>    
                    <% } %>
                </tbody>
            </table>
        </article>
    </article>
</article>
<%- include ('partials/_footer') %>